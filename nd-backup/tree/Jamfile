SubDir TOP tools src common tree ;

#
# HEADER FILES
#
local lstProjectHeaders = [ FDirName $(SEARCH_SOURCE) ] $(TOP) ;
lstProjectHeaders += [ FDirName $(TOP) tools src ] ;
lstProjectHeaders += [ FDirName $(TOP) shared src ] ;
lstProjectHeaders += [ FDirName $(TOP) shared src sharedmath pc include ] ;
lstProjectHeaders += [ FDirName $(TOP) game ] ;
lstProjectHeaders += [ FDirName $(TOP) shared src scea_shared ] ;

#
# SOURCE FILES
#
local lstProjectFiles = [ FindCPPFiles $(SEARCH_SOURCE) ] ;

#
# SOURCE FILES TO BE EXCLUDED FROM COMPILATION
#
local lstRemoveFiles = "" ;
lstProjectFiles = [ FListSubtractRelative $(lstProjectFiles) : $(lstRemoveFiles) ] ;

#
# SETTINGS FOR THE PROJECT
#
EXTRA_HEADERS = $(lstProjectHeaders) ;
EXCEPTION_HANDLING = TRUE ;
MULTITHREADED = TRUE ;

#
# PROJECT TYPE
#
OS_CONFIGURATIONS = nt linux ps3 psx ;
#USE_PRECOMPILED_HEADER = stdafx.h stdafx.cpp ;
USE_PRECOMPILED_HEADER = FALSE ;
LibProject tree : $(lstProjectFiles) ;

